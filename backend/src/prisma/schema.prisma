generator client {
    provider = "prisma-client-js"
    output   = "../../../node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  nick      String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Transaction {
    id       String   @id @default(uuid())
    type     String
    amount   Int
    category String
    date     DateTime
    comment  String?
}
